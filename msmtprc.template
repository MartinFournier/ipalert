defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log

account        gmail
host           ${GMAIL_HOST}
port           ${GMAIL_PORT}
from           ${GMAIL_FROM}
user           ${GMAIL_USER}
password       ${GMAIL_PASS}

account default : gmail
